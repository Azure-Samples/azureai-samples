openapi: 3.0.1
info:
  title: Weather Service API
  description: This is a sample API for retrieving weather information.
  version: 1.0.0
servers:
  - url: https://api.example.com/weather
    description: Main API Server
paths:
  /current:
    get:
      summary: Get current weather
      operationId: getCurrentWeather
      tags:
        - weather
      parameters:
        - name: location
          in: query
          required: true
          description: Location to get weather for
          schema:
            type: string
      responses:
        '200':
          description: Current weather details
          content:
            application/json:
              schema:
                $ref: '#/components/schemas/Weather'
        '404':
          description: Location not found
  /forecast:
    get:
      summary: Get weather forecast
      operationId: getWeatherForecast
      tags:
        - weather
      parameters:
        - name: location
          in: query
          required: true
          description: Location to get weather forecast for
          schema:
            type: string
        - name: days
          in: query
          required: true
          description: Number of days to forecast
          schema:
            type: integer
            minimum: 1
            maximum: 7
      responses:
        '200':
          description: Weather forecast details
          content:
            application/json:
              schema:
                type: array
                items:
                  $ref: '#/components/schemas/Weather'
        '404':
          description: Location not found
components:
  schemas:
    Weather:
      type: object
      properties:
        location:
          type: string
        temperature:
          type: number
        description:
          type: string
        humidity:
          type: number
        windSpeed:
          type: number
